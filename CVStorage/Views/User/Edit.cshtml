@model PersonEditViewModel

@{
    ViewBag.Title = "Edit Profile";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath);
}

<form asp-controller="User" asp-action="Edit" enctype="multipart/form-data" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <input hidden asp-for="ID" />
    <input hidden asp-for="Email" />
    <input hidden asp-for="ExistingPhotoPath" />
    <input hidden asp-for="IsAccepted" />

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <!--<div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">-->
            @*<input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>*@
            <!--<p>@Model.Email</p>
        </div>
    </div>-->

    <div class="form-group row">
        <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" placeholder="Phone">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Subject" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Subject" class="form-control" placeholder="Subject">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="University" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="University" class="form-control" placeholder="University">
            <span asp-validation-for="University" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SSC_GPA" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SSC_GPA" class="form-control" placeholder="SSC GPA">
            <span asp-validation-for="SSC_GPA" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="HSC_GPA" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="HSC_GPA" class="form-control" placeholder="HSC GPA">
            <span asp-validation-for="HSC_GPA" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Bachelor_CGPA" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Bachelor_CGPA" class="form-control" placeholder="Bachelor CGPA">
            <span asp-validation-for="Bachelor_CGPA" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Project" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Project" class="form-control" placeholder="Project">
            <span asp-validation-for="Project" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Skills" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Skills" class="form-control" placeholder="Skills">
            <span asp-validation-for="Skills" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="PhotoPath" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="PhotoPath" class="custom-file-input form-control">
                <label class="custom-file-label">Click here to change photo</label>
            </div>
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="index" asp-controller="home" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>